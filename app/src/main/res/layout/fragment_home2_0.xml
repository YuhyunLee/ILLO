<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/moim_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:src="@drawable/red_court" />

            <RelativeLayout
                android:id="@+id/moim_info_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/moim_thumbnail"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-63dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/card_moim_info">

                <TextView
                    android:id="@+id/moim_name"
                    style="@style/IlloKrLargeTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="슬램덩크"
                    android:textColor="@color/illo_white100" />

                <TextView
                    android:id="@id/moim_info"
                    style="@style/IlloKrBody3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/moim_name"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-20dp"
                    android:layout_marginEnd="20dp"
                    android:text="서울권 연합 농구 동아리"
                    android:textColor="@color/illo_white100" />

                <TextView
                    android:id="@+id/header_member_num"
                    style="@style/IlloKrCaption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/moim_info"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:text="멤버수"
                    android:textColor="@color/illo_white100" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/header_member_num"
                    android:layout_marginStart="16dp"
                    android:layout_toRightOf="@+id/header_member_num"
                    android:background="@drawable/button_small_20">

                    <TextView
                        android:id="@+id/txt_member_num"
                        style="@style/IlloKrCaption2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="210명"
                        android:textColor="@color/illo_dark_purple" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/header_moimjang"
                    style="@style/IlloKrCaption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/moim_info"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="166dp"
                    android:text="Moim장"
                    android:textColor="@color/illo_white100" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/header_moimjang"
                    android:layout_marginStart="16dp"
                    android:layout_toRightOf="@+id/header_moimjang"
                    android:background="@drawable/button_small_20">

                    <TextView
                        android:id="@+id/txt_moimjang"
                        style="@style/IlloKrCaption2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="이민혁"
                        android:textColor="@color/illo_dark_purple" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/moim_info_card"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp">

                <TextView
                    android:id="@+id/header_notice"
                    style="@style/IlloKrTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="공지"
                    android:textColor="@color/illo_dark_purple" />

                <ImageView
                    android:id="@+id/btn_add_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_plus" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/no_notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/notice"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/illust_3fingers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="53dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginEnd="82dp"
                    android:src="@drawable/illust_3_fingers" />

                <TextView
                    style="@style/IlloKrTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/illust_3fingers"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="88dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="92dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:text="공지를 추가해주세요"
                    android:textColor="@color/illo_dark_purple" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notice"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="10dp"
                tools:listitem="@layout/item_post" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>