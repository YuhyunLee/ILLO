<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/illo_white100">

    <TextView
        android:id="@+id/title_schedule_name"
        style="@style/IlloKrTitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:text="제목"
        android:textColor="@color/illo_dark_purple" />

    <EditText
        android:id="@+id/input_schedule_name"
        style="@style/IlloKrBody3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_schedule_name"
        android:layout_alignStart="@+id/title_schedule_name"
        android:layout_alignEnd="@+id/title_schedule_name"
        android:layout_marginTop="6dp"
        android:background="@android:color/transparent"
        android:hint="스케줄의 제목을 입력해주세요"
        android:textColor="@color/illo_black80"
        android:textColorHint="@color/illo_black20" />
</RelativeLayout>