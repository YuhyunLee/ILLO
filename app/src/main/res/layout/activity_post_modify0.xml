<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostModify0Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_post_modify"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/title_post_modify"
            style="@style/IlloKrSubtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="글 수정"
            android:textColor="@color/illo_dark_purple"
            android:textSize="14dp">

        </TextView>

        <ImageView
            android:id="@+id/btn_post_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="16dp"
            android:src="@drawable/icon_ok" />

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/step_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_post_modify">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_first_step_enable" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/etc_step_connect" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_second_step_disable" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/fade_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/illo_black60"
        android:visibility="invisible"></View>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fab_post"
        android:layout_alignTop="@+id/fab_post"
        android:layout_alignEnd="@+id/fab_post"
        android:layout_alignBottom="@+id/fab_post"
        android:backgroundTint="@color/illo_dark_purple"
        android:src="@drawable/icon_fab_game"
        app:maxImageSize="52dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fab_post"
        android:layout_alignTop="@+id/fab_post"
        android:layout_alignEnd="@+id/fab_post"
        android:layout_alignBottom="@+id/fab_post"
        android:backgroundTint="@color/illo_dark_purple"
        android:src="@drawable/icon_fab_gallery"
        app:maxImageSize="52dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/illo_dark_purple"
        android:src="@drawable/icon_fab_plus"
        app:maxImageSize="52dp" />

</RelativeLayout>