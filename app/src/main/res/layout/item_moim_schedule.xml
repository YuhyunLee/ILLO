<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:background="@drawable/card_schedule">

        <TextView
            android:id="@+id/title_schedule"
            style="@style/IlloKrLargeTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="토요경기"
            android:textColor="@color/illo_white100" />

        <TextView
            android:id="@+id/place"
            style="@style/IlloKrCaption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_schedule"
            android:layout_alignStart="@+id/title_schedule"
            android:layout_alignEnd="@+id/title_schedule"
            android:layout_marginTop="-15dp"
            android:text="서울시 동작구 상도로 356"
            android:textColor="@color/illo_white100" />

        <TextView
            android:id="@+id/time"
            style="@style/IlloKrCaption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place"
            android:layout_alignStart="@+id/title_schedule"
            android:layout_alignEnd="@+id/title_schedule"
            android:layout_marginTop="-12dp"
            android:text="16:00"
            android:textColor="@color/illo_white100" />

        <ImageView
            android:id="@+id/btn_participate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_alignStart="@+id/title_schedule"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/small_button_participate" />

        <ImageView
            android:id="@+id/container_profile_participate"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignTop="@id/btn_participate"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/x_small_profile_2" />

    </RelativeLayout>

</RelativeLayout>