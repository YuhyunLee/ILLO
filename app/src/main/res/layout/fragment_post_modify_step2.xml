<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/header_modify_post_step2"
        style="@style/IlloKrTitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="태그 추가하기"
        android:textColor="@color/illo_dark_purple"
        android:textStyle="bold" />

    <EditText
        android:layout_below="@+id/header_modify_post_step2"
        android:layout_alignStart="@+id/header_modify_post_step2"
        android:layout_alignEnd="@+id/header_modify_post_step2"
        android:id="@+id/modify_hashtag"
        style="@style/IlloKrBody3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="태그를 추가해주세요"
        android:textColor="@color/illo_black80"
        android:textColorHint="@color/illo_black20" />

</RelativeLayout>