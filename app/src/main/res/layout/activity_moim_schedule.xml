<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/illo_white100"
    tools:context=".ScheduleActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_schedule"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/title_input_schedule"
            style="@style/IlloKrSubtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="스케줄"
            android:textColor="@color/illo_dark_purple"
            android:textSize="14dp">

        </TextView>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/title_schedule"
        style="@style/IlloKrTitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar_schedule"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="토요 경기"
        android:textColor="@color/illo_dark_purple" />

    <TextView
        android:id="@+id/header_place"
        style="@style/IlloKrBody1"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_schedule"
        android:layout_alignStart="@+id/title_schedule"
        android:layout_marginTop="6dp"
        android:text="장소"
        android:textColor="@color/illo_black100" />

    <TextView
        android:id="@+id/txt_schedule_place"
        style="@style/IlloKrBody3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_schedule"
        android:layout_alignEnd="@+id/title_schedule"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/header_place"
        android:text="서울시 동작구 상도로 365"
        android:textColor="@color/illo_black60" />

    <TextView
        android:id="@+id/header_time"
        style="@style/IlloKrBody1"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_schedule_place"
        android:layout_alignStart="@+id/header_place"
        android:layout_marginTop="6dp"
        android:text="시간"
        android:textColor="@color/illo_black100" />

    <TextView
        android:id="@+id/txt_schedule_time"
        style="@style/IlloKrBody3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_schedule_place"
        android:layout_alignEnd="@+id/title_schedule"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/header_time"
        android:text="16:00"
        android:textColor="@color/illo_black60" />

    <TextView
        android:id="@+id/header_memo"
        style="@style/IlloKrBody1"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_schedule_time"
        android:layout_alignStart="@+id/header_time"
        android:layout_marginTop="6dp"
        android:text="메모"
        android:textColor="@color/illo_black100" />

    <TextView
        android:id="@+id/txt_schedule_memo"
        style="@style/IlloKrBody3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_schedule_time"
        android:layout_alignEnd="@+id/title_schedule"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/header_memo"
        android:text="개인 운동화와 물 준비 해주세요\n10분 전 도착 꼭 부탁드립니다"
        android:textColor="@color/illo_black60" />

    <TextView
        android:id="@+id/header_num"
        style="@style/IlloKrBody1"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_schedule_memo"
        android:layout_alignStart="@+id/header_memo"
        android:layout_marginTop="6dp"
        android:text="참여인원"
        android:textColor="@color/illo_black100" />

    <TextView
        android:id="@+id/txt_schedule_num"
        style="@style/IlloKrBody3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_schedule_memo"
        android:layout_alignEnd="@+id/title_schedule"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/header_num"
        android:text="10명"
        android:textColor="@color/illo_black60" />

    <TextView
        android:id="@+id/header_due"
        style="@style/IlloKrBody1"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_schedule_num"
        android:layout_alignStart="@+id/header_num"
        android:layout_marginTop="6dp"
        android:text="마감일"
        android:textColor="@color/illo_black100" />

    <TextView
        android:id="@+id/txt_schedule_due"
        style="@style/IlloKrBody3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_schedule_num"
        android:layout_alignEnd="@+id/title_schedule"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/header_due"
        android:text="7월 31일 18:00"
        android:textColor="@color/illo_black60" />

    <TextView
        android:id="@+id/header_member"
        style="@style/IlloKrBody1"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_schedule_due"
        android:layout_alignStart="@+id/header_due"
        android:layout_marginTop="6dp"
        android:text="참여자"
        android:textColor="@color/illo_black100" />

</RelativeLayout>