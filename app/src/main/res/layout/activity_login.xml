<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/illo_white100"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/title_login"
        style="@style/IlloKrHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="24dp"
        android:text="로그인"
        android:textColor="@color/illo_dark_purple" />

    <TextView
        android:id="@+id/header_id"
        style="@style/IlloKrTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:text="아이디"
        android:textColor="@color/illo_dark_purple" />

    <EditText
        android:id="@+id/input_id"
        style="@style/IlloKrBody3"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_id"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="76dp"
        android:background="@android:color/transparent"
        android:hint="아이디를 입력해주세요"
        android:textColor="@color/illo_black80"
        android:textColorHint="@color/illo_black20" />

    <TextView
        android:id="@+id/txt_error_id"
        style="@style/IlloKrCaption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_id"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="존재하지 않는 아이디입니다"
        android:textColor="@color/illo_light_purple"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/header_pw"
        style="@style/IlloKrTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_error_id"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:text="비밀번호"
        android:textColor="@color/illo_dark_purple" />

    <EditText
        android:id="@+id/input_pw1"
        style="@style/IlloKrBody3"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_pw"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="76dp"
        android:hint="비밀번호를 입력해주세요"
        android:background="@android:color/transparent"
        android:password="true"
        android:textColor="@color/illo_black80"
        android:textColorHint="@color/illo_black20" />

    <TextView
        android:id="@+id/txt_error_pw"
        style="@style/IlloKrCaption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_pw1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="비밀번호가 일치하지 않습니다"
        android:textColor="@color/illo_light_purple"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/goto_signup"
        style="@style/IlloKrBody2Underline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_error_pw"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="회원가입하러 가기"
        android:textColor="@color/illo_dark_purple" />

    <TextView
        android:id="@+id/goto_find"
        style="@style/IlloKrBody2Underline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goto_signup"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="아이디/비밀번호 찾기"
        android:textColor="@color/illo_dark_purple" />

    <LinearLayout
        android:id="@+id/btn_login"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_long">

        <TextView
            style="@style/IlloKrTitle1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="로그인하기"
            android:textColor="@color/illo_white100"
            android:textSize="16dp" />
    </LinearLayout>
</RelativeLayout>